@model WeatherForecast.Infrastructure.Models.LocationInListViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Weather Forecast Details</h2>

<table class="table">
    <tr><th>Location ID</th><td>@Model.LocationId</td></tr>
    <tr><th>Department</th><td>@Model.Department (@Model.DepartmentCode)</td></tr>
    <tr><th>City</th><td>@Model.City</td></tr>
    <tr><th>Postal Code</th><td>@Model.PostalCode</td></tr>
    <tr><th>Latitude</th><td>@Model.Latitude</td></tr>
    <tr><th>Longitude</th><td>@Model.Longitude</td></tr>
    <tr><th>Elevation</th><td>@Model.Elevation</td></tr>
    <tr><th>Timezone</th><td>@Model.Timezone (@Model.TimezoneAbbreviation)</td></tr>
    <tr><th>Generated In (ms)</th><td>@Model.GenerationtimeMs</td></tr>
</table>

<h4>Weather Units</h4>
<ul>
    <li>Time: @Model.WeatherUnits.Time</li>
    <li>Interval: @Model.WeatherUnits.Interval</li>
    <li>Temperature: @Model.WeatherUnits.Temperature</li>
    <li>Wind Speed: @Model.WeatherUnits.Windspeed</li>
    <li>Wind Direction: @Model.WeatherUnits.Winddirection</li>
    <li>Weather Code: @Model.WeatherUnits.Weathercode</li>
</ul>

@if (Model.CurrentWeather?.Any() == true)
{
    <h4>Current Weather</h4>
    <table class="table">
        <tr>
            <th>Time</th>
            <th>Interval (s)</th>
            <th>Temperature</th>
            <th>Wind Speed</th>
            <th>Wind Direction</th>
            <th>Is Day</th>
            <th>Weather Code</th>
        </tr>
        @foreach (var weather in Model.CurrentWeather)
        {
            <tr>
                <td>@weather.Time</td>
                <td>@weather.Interval</td>
                <td>@weather.Temperature</td>
                <td>@weather.Windspeed</td>
                <td>@weather.Winddirection</td>
                <td>@(weather.IsDay == 1 ? "Yes" : "No")</td>
                <td>@weather.Weathercode</td>
            </tr>
        }
    </table>
}
